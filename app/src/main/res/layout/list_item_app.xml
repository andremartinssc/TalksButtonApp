<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white" /> <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="16dp">

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#FFEB3B" android:text="▶"
        android:textColor="@android:color/black" android:textSize="20sp"
        android:gravity="center"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir" android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="🗑 Excluir"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:backgroundTint="#F44336"
        android:textColor="@android:color/white"
        style="?android:attr/borderlessButtonStyle" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#03A9F4" android:text="⭐"
        android:textColor="@android:color/white" android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicar" android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:backgroundTint="#FFC107"
        android:textColor="@android:color/white"
        style="?android:attr/borderlessButtonStyle" />

</LinearLayout>

</LinearLayout>